<div id="paper-wormhole"></div>
{{#paper-nav-container}}
  {{#paper-sidenav class="md-sidenav-left md-whiteframe-z2" locked-open="gt-sm"}}
  {{#paper-toolbar}}
    <div class="md-toolbar-tools">
      <strong>Super Blog</strong>
    </div>
  {{/paper-toolbar}}
  {{#paper-content}}
    {{#paper-list}}
      {{#paper-item action="goto" param="posts"}}All Posts{{/paper-item}}
      {{#paper-item action="goto" param="new"}}New Post{{/paper-item}}
    {{/paper-list}}
  {{/paper-content}}
  {{/paper-sidenav}}

  <div layout="column" tabindex="-1" role="main" flex>
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        {{#paper-sidenav-toggle as |toggle|}}
        {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon icon="menu"}}{{/paper-button}}
        {{/paper-sidenav-toggle}}
        <span class="md-breadcrumb-page">{{currentPathCaps}}</span>
        {{#paper-button action="search" icon-button=true class="right"}}{{paper-icon icon="search"}}{{/paper-button}}
      </div>
    {{/paper-toolbar}}
    {{#paper-content class="md-padding"}}
    {{#if searchOn}}
      {{input value=search id="searchbar" placeholder="Search" action="updateSearch" on="key-press"}}
    {{/if}}

    {{outlet}}
    {{/paper-content}}
  </div>
{{/paper-nav-container}}
